<loading hidden="{{hidden}}" bindchange="loadingChange">
  加载中...
</loading>
<view class="page">
  <view class="scrollXclass">
    <view class="messaheMenu">
<view wx:for="{{msgTypeList}}" wx:key="index" data-type="{{item.code}}" bindtap="messaheMenuClick" class="{{item.select?'select':''}}">{{item.label}}</view>
      <!--<view data-type="2" bindtap="messaheMenuClick" style="color: {{typeName=='2'?'#079ADD':''}}; border-bottom:{{typeName=='2'?'2px #079ADD solid':'none'}}">通知</view>
      <view data-type="3" bindtap="messaheMenuClick" style="color: {{typeName=='3'?'#079ADD':''}}; border-bottom:{{typeName=='3'?'2px #079ADD solid':'none'}}">规范</view>
      <view data-type="4" bindtap="messaheMenuClick" style="color: {{typeName=='4'?'#079ADD':''}}; border-bottom:{{typeName=='4'?'2px #079ADD solid':'none'}}">精品</view>
      <view data-type="5" bindtap="messaheMenuClick" style="color: {{typeName=='5'?'#079ADD':''}}; border-bottom:{{typeName=='5'?'2px #079ADD solid':'none'}}">图片</view>
      <view data-type="6" bindtap="messaheMenuClick" style="color: {{typeName=='6'?'#079ADD':''}}; border-bottom:{{typeName=='6'?'2px #079ADD solid':'none'}}">监督</view>-->
    </view>
  </view>
  <view class="messaheTitle">
    <scroll-view scroll-y="true" style="height:{{scrollHeight}}px;" bindscrolltolower="bindDownLoad" bindscrolltoupper="refresh">
      <view class="weui-panel weui-panel_access">
        <view wx:for="{{messageList}}" wx:key="{{message.value}}">
          <navigator url="messageContent/messageContent?msgID={{item.msgID}}&msgTypeName={{item.msgTypeName}}" class="weui-media-boxs weui-media-box_appmsg" hover-class="weui-cell_active">
            <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
              <view class="weui-media-box__title">{{item.title}}</view>
              <view wx:if="{{typeName=='5'&& item.imgURL!=null}}">
                <image style="width: 100%; background-color: #eeeeee;" mode="scaleToFill" src="{{item.imgURL}}"></image>
              </view>
              <view class="weui-media-box__desc contentBottom">
                <text>时间：{{item.insertTime}}</text>
              </view>
            </view>
          </navigator>
        </view>
      </view>
      <view class="tips1">
        <view wx:if="{{hasMore}}" style="display: flex;flex-direction: row;align-items: center;align-self: center;color:#777;justify-content: center;">
          <view wx:if="{{hasMoreBe}}">
            <view class="weui-loading"></view>
            <text>正在加载中...</text>
          </view>
          <text wx:else>———— 没有更多内容了 ————</text>
        </view>
      </view>
    </scroll-view>

