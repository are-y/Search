
<!--pages/message/messageContent/messageContent.wxml-->
<import src="../../../js/htmlParse/wxParse.wxml" />
<view class="page">
  <view class="articleTop">
    <view class="articleTitle">{{message.title}}</view>
    <view class="weui-media-box__desc">
      <text>{{message.signer}}</text>
      <text class="uploadingTime">{{message.insertTime}}</text>
    </view>
  </view>
  <view class="articleContent">
    <view class="wxParse">
      <template is="wxParse" data="{{wxParseData:article.nodes}}" />
    </view>
  </view>
  <view wx:if="{{attachment!=null&&attachment!=''}}">
    <view>附件：</view>
    <view wx:for="{{attachment}}" wx:key="">
      <view style="color: #0000CD;font-size: 10pt;margin-left:35px;" data-data="{{item.fileID}}" data-ext="{{item.ext}}" bindtap="bindFile">{{index+1}}、{{item.fileID}}.{{item.ext}}</view>
    </view>
  </view>
</view>