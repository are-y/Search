/* 用户信息 */
.userinfo{
    padding: 10px;
    background: #FFF;
    border-bottom:1rpx solid #D9D9D9;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}
.userinfo .avatar {
    width: 70px;
    height: 70px;
     /*border-radius: 50%;*/
}

.userinfo .info{
    display: flex;
    flex-direction: column;
    flex:auto;
    margin-left:20px;
    line-height: 30px;
}
.userinfo .info .location{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}
