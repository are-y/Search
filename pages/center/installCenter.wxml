
<view class="backGauge">
    <view class="weui-cells weui-cells_after-title">
        <navigator  class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__bd">用户名</view>
            <view class="weui-cell__ft">{{nickName}}</view>
        </navigator>
       <!-- <navigator url="" bindtap="setPhotoInfo" class="weui-cell weui-cell_access" hover-class="weui-cell_active">-->
       <navigator  class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__bd">头像</view>
            <view class="weui-cell__ft">
                <!--判断是否有上传imgUrl，没有就默认显示userInfo.avatarUrl-->
                <image wx:if="{{imgUrl!=null}}" class="avatar headImg" src="{{imgUrl}}" background-size="cover"></image>
                <image wx:else class="avatar headImg" src="{{avatarUrl}}" background-size="cover"></image>
            </view>
        </navigator>
        <navigator url="uPass" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
            <view class="weui-cell__bd">密码设置</view>
            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
        </navigator>
    </view>
    <!--退出系统-->
    <view bindtap="listenerStorageSynClear" class="exitBut">
        <button class="weui-btn-area" type="primary" >退出系统</button>
    </view>

</view>

