.content-main{
    display: flex;
    padding: 10px;
    height: auto;
    flex-direction: column;
    justify-content:flex-start;
    /*border:1px solid red;*/
}

.content-up{
    height: auto;
   /*border:1px solid red;*/
}
.content-up-item{
    display: flex;
    flex-direction: row;
    justify-content:flex-start;
    align-items:center;
    height: 50px;
    /*border:1px solid red;*/
    border-bottom: 1px solid #e4e4e4;
}
.item_left{
    width:auto;
    min-width: 120px;
    margin-left: 10px;
    /*border:1px solid green;*/
    display: flex;
}
.item_left icon{
    margin-right: 5rpx;
}
.item_right{
    width: 80%;
}


.content-down{
    margin-top: 20px;
}

/*选择照片之后的中间内容*/
.content-center{
    height:auto;
    min-height: 250px;
    /*border:1px solid blue;*/
}

.upload-video{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content:center;
    align-items: center;
    /*border: 1px solid red;*/
}

.upload-imgs{
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content:flex-start;
    align-items: center;
    /*border: 1px solid red;*/
}

.for-imgs{
    width: 80px;
    height: 80px;
    margin: 5px;
    /*border: 1px solid blue;*/
}

.itemImg{
    width: 100%;
    height: 100%;
    /*border:1px solid red;*/
}